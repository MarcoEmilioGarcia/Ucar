<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp"
    android:elevation="1dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/chat_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_circle"
        android:clipToOutline="true"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_photo"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cristina"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/chat_profile_pic"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usa estos"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/chat_profile_pic"
        android:layout_below="@id/chat_name" />

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:18"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/message_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/chat_time"
        android:layout_alignEnd="@id/chat_time"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_background"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:text="3" />
</RelativeLayout>
